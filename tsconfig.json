{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "packages/**/*",
    "packages/**/*.vue",
    "tests/**/*",
    "tests/**/*.vue",
    "global.d.ts",
    "setupTest.ts",
    "__mocks__"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./packages/*"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}